<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="#EDE5E5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ButtonFragment">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/getmeal"
        android:text="Get Meal By"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cv1"
        app:layout_constraintTop_toBottomOf="@id/getmeal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cv2"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/pp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/getmeal" />

        <TextView
            android:textColor="#fff"
            android:text="First Letter"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        android:id="@+id/cv2"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/getmeal"
        app:layout_constraintLeft_toRightOf="@id/cv1"
        app:layout_constraintRight_toLeftOf="@id/cv3"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/pp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/getmeal" />

        <TextView
            android:textColor="#fff"
            android:text="Country"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cv3"
        app:layout_constraintTop_toBottomOf="@id/getmeal"
        app:layout_constraintLeft_toRightOf="@id/cv2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/pp"
            app:layout_constraintTop_toBottomOf="@id/getmeal"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:textColor="#fff"
            android:text="Ingredient"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/cv2"
        android:text="Categories"
        android:textSize="20dp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>